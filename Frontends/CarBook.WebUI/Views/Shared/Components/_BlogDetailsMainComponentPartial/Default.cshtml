@model ResultBlogDto

<div class="col-md-8 ftco-animate">

	<h2 class="mb-3">@Model.Title</h2>
	<p>
		<img src="@Model.CoverImgUrl" alt="" class="img-fluid">
	</p>
	<p>@Html.Raw(Model.Description)</p>

	@await Component.InvokeAsync("_BlogDetailTagCloudByBlogComponentPartial", new { id = Model.Id })

	@await Component.InvokeAsync("_BlogDetailsAboutAuthorComponentPartial")

	<div class="pt-5 mt-5">
		@await Component.InvokeAsync("_BlogDetailsCommentsComponentPartial")

		@await Component.InvokeAsync("_BlogDetailSendACommentComponentPartial")
	</div>

</div> <!-- .col-md-8 -->